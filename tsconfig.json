{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": "./src",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"paths": {
			"@/*": [
				"./*"
			]
		},
		"resolveJsonModule": true,
		"strict": false,
		"target": "es5"
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"dist",
		"node_modules"
	]
}
